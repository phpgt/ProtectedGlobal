{
	"name": "phpgt/protectedglobal",
	"description": "Protect against accidental use of superglobals.",
	"license": [
		"MIT"
	],

	"require": {
		"php": ">7.4"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.10",
		"phpunit/phpunit": "^10.1"
	},

	"autoload": {
		"psr-4": {
			"Gt\\ProtectedGlobal\\": "./src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\ProtectedGlobal\\Test\\": "./test/phpunit"
		}
	}
}
